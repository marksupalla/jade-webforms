doctype
html
  head
    
    meta(charset='utf-8')
    title Calculator
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 CALCULATOR
    h3 Answer = #{ops}
    form(method='post', action='/calc')
      input(type='text', name='x', placeholder='NUMBER', autofocus=true)
      select(name='t')
        option +
        option -
        option *
        option /
      input(type='text', name='y', placeholder='NUMBER')
      button Calculate

